@model List<ExemploSQLite.Models.Produto>

<h2 class="text-center text-primary">Lista de Produtos - com Bootstrap</h2>

@if (TempData["Mensagem"] != null)
{
    <script>
        alert('@Html.Raw(TempData["Mensagem"])');
    </script>
}

<table border="1" cellpadding="8">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Preço</th>
        <th>Ações</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Nome</td>
        <td>R$ @item.Preco</td>
        <td>
            <a href="/Produtos/Edit/@item.Id">Editar</a> |
            <a href="/Produtos/Delete/@item.Id">Excluir</a>
        </td>
    </tr>
}
</table>

<br />
<a href="/Produtos/Criar">➕ Adicionar Produto</a>